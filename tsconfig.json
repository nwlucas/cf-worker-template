{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "alwaysStrict": true,
    "strict": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "outDir": "tscOutDir",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
      "$handlers/*": ["./src/handlers/*"],
      "$lib/*": ["./src/lib/*"],
    },
    "types": [
      "@cloudflare/workers-types",
      "@types/node",
      "@types/jest",
      "@types/service-worker-mock"
    ]
  },
  "include": [
    "src/**/*",
  ],
  "exclude": ["node_modules", "dist", "test", "__tests__"]
}
